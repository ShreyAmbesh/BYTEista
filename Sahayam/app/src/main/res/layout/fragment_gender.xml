
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="byteista.sahayam.UserRegistration.FragmentGender"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/gender_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Select Your Gender"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp" />
<LinearLayout
    android:layout_below="@+id/gender_heading"
    android:layout_above="@+id/buttonContinue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@color/cardview_shadow_start_color">

    <RelativeLayout
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha="0.75"
            android:elevation="0dp"
            android:padding="20dp"
            android:src="@drawable/ic_masculine" />

        <TextView
            android:id="@+id/male_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="MALE"
            android:textColor="@android:color/black"
            android:textSize="72sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/female"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:longClickable="true"
        android:clickable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha="0.85"
            android:padding="20dp"
            android:src="@drawable/ic_femenine" />

        <TextView
            android:id="@+id/female_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="FEMALE"
            android:textColor="@android:color/black"
            android:textSize="72sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:longClickable="true"
        android:clickable="true">

        <TextView
            android:id="@+id/other_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="OTHER"
            android:textColor="@android:color/black"
            android:textSize="72sp" />


    </RelativeLayout>


</LinearLayout>

</RelativeLayout>