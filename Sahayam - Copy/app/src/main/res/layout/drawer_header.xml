<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    >
    <RelativeLayout
        android:id="@+id/profile_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.pkmmte.view.CircularImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:border="true"
            app:border_color="@color/background_contact_image"
            app:border_width="0dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_blank_profile_pic"
            app:shadow="true"
            android:id="@+id/profile_pic_image_view_drawer"
            app:selector="true"
            app:selector_color="@color/selector_color"
            app:selector_stroke_color="@color/selector_color"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/profile_pic_image_view_drawer"
            >
            <TextView
                android:id="@+id/name"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/usn"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/branch"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/semester"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                />

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>