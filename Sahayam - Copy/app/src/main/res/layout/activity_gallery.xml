<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="byteista.sahayam.Media.GalleryActivity">
<include android:id="@+id/gallery_app_bar"
    layout="@layout/gallery_app_bar"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gv_folder"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/gallery_app_bar"
        />
    <byteista.sahayam.Media.RecyclerViewFastScroller
        android:id="@+id/fastscroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/gv_folder"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/gv_folder"
        />
</RelativeLayout>
